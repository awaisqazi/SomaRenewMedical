---
import MainLayout from "../layouts/MainLayout.astro";
import heroImage from "../images/hero.png";
---

<MainLayout title="Home">
  <!-- Hero Section with Premium Glassmorphism -->
  <section class="hero-section relative min-h-[80svh] sm:min-h-[85svh] md:min-h-screen flex items-center justify-center overflow-hidden">
    <!-- Hero Background Image - Luxurious Scaling -->
    <div class="absolute inset-0 z-0">
      <div class="hero-image-container absolute inset-0">
        <img
          src={heroImage.src}
          alt="SomaRenew Medical Hero"
          class="hero-bg-image w-full h-full object-cover"
          loading="eager"
        />
      </div>
      <!-- Sophisticated Gradient Overlay - Enhanced for mobile legibility -->
      <div class="absolute inset-0 bg-gradient-to-b from-charcoal/50 via-charcoal/35 to-charcoal/60 md:from-charcoal/40 md:via-charcoal/30 md:to-charcoal/50"></div>
      <!-- Subtle warm tint overlay -->
      <div class="absolute inset-0 bg-gradient-to-tr from-charcoal/20 via-transparent to-soma-gold/10"></div>
      <!-- Mobile bottom fade for scroll indicator visibility -->
      <div class="absolute bottom-0 left-0 right-0 h-32 bg-gradient-to-t from-charcoal/40 to-transparent md:hidden"></div>
    </div>
    
    <!-- Floating Parallax Orbs (behind glass card) -->
    <div class="parallax-orb orb-1 absolute w-[500px] h-[500px] rounded-full opacity-20 blur-[120px] pointer-events-none z-[1]"
         style="background: radial-gradient(circle, var(--soma-gold) 0%, transparent 70%); top: 5%; right: 5%;"></div>
    <div class="parallax-orb orb-2 absolute w-[350px] h-[350px] rounded-full opacity-15 blur-[100px] pointer-events-none z-[1]"
         style="background: radial-gradient(circle, var(--sage-green) 0%, transparent 70%); bottom: 15%; left: 10%;"></div>

    <!-- Hero Content with Premium Glass Card -->
    <div class="relative z-10 container mx-auto px-4 md:px-6 text-center">
      <!-- Premium Glassmorphism Card -->
      <div class="hero-glass-card hero-animate hero-delay-1 inline-block px-8 py-10 md:px-16 md:py-14 lg:px-20 lg:py-16 rounded-[2rem] max-w-4xl mx-auto opacity-0">
        
        <!-- Overline -->
        <p class="hero-animate hero-delay-2 text-soma-gold uppercase tracking-[0.2em] md:tracking-[0.3em] text-xs md:text-sm mb-5 font-semibold opacity-0">
          Welcome to SomaRenew Medical
        </p>
        
        <!-- Main Headline - Editorial Typography -->
        <h1 class="hero-animate hero-delay-3 text-white text-3xl sm:text-4xl md:text-5xl lg:text-6xl xl:text-7xl font-serif font-bold mb-5 md:mb-6 leading-[1.15] opacity-0">
          The Physician-Led Path<br class="hidden sm:block" />
          <span class="text-soma-gold">to Transformation</span>
        </h1>
        
        <!-- Subheadline -->
        <p class="hero-animate hero-delay-4 text-sm md:text-base lg:text-lg max-w-2xl mx-auto mb-8 md:mb-10 text-gray-200/90 leading-relaxed opacity-0">
          Combining GLP-1 Medications, Peptide Therapy, and Advanced Body
          Contouring for personalized, lasting results in a serene, luxury
          environment.
        </p>
        
        <!-- CTA Buttons -->
        <div class="hero-animate hero-delay-5 flex flex-col sm:flex-row gap-3 md:gap-4 justify-center opacity-0">
          <a
            class="inline-flex items-center justify-center gap-2 bg-soma-gold hover:bg-[#D4C89A] text-charcoal py-3.5 md:py-4 px-8 md:px-10 rounded-full text-base md:text-lg font-semibold transition-all duration-300 hover:scale-[1.02] shadow-lg hover:shadow-xl group"
            href="/consultation"
          >
            <span>Schedule My Consultation</span>
            <svg class="w-4 h-4 md:w-5 md:h-5 transition-transform duration-300 group-hover:translate-x-0.5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 8l4 4m0 0l-4 4m4-4H3"/>
            </svg>
          </a>
          <a
            class="inline-flex items-center justify-center py-3.5 md:py-4 px-8 md:px-10 rounded-full text-base md:text-lg font-semibold border-2 border-white/30 text-white transition-all duration-300 hover:bg-white/10 hover:border-white/50"
            href="/services"
          >
            View Our Services
          </a>
        </div>
      </div>
    </div>

    <!-- Scroll Indicator -->
    <div class="absolute bottom-6 md:bottom-8 left-1/2 -translate-x-1/2 flex flex-col items-center gap-2 hero-animate hero-delay-6 opacity-0">
      <span class="text-[10px] md:text-xs uppercase tracking-[0.2em] text-white/50 font-medium">Discover</span>
      <div class="scroll-indicator w-5 h-8 md:w-6 md:h-10 rounded-full border-2 border-white/30 flex justify-center pt-1.5 md:pt-2">
        <div class="w-1 h-1 md:w-1.5 md:h-1.5 rounded-full bg-soma-gold animate-bounce"></div>
      </div>
    </div>
  </section>

  <!-- Welcome/Philosophy Section -->
  <section
    class="py-24 md:py-32 relative overflow-hidden"
    style="background: linear-gradient(135deg, #FDFDFD 0%, #F8F6F0 100%);"
  >
    <!-- Decorative Background Elements -->
    <div class="absolute top-0 right-0 w-96 h-96 bg-[var(--soma-gold)]/5 rounded-full blur-3xl -translate-y-1/2 translate-x-1/2"></div>
    <div class="absolute bottom-0 left-0 w-64 h-64 bg-[var(--sage-green)]/5 rounded-full blur-3xl translate-y-1/2 -translate-x-1/2"></div>

    <div class="container mx-auto px-6 text-center relative z-10">
      <div class="fade-in-up inline-block mb-6">
        <span class="text-soma-gold uppercase tracking-[0.25em] text-sm font-semibold">Our Philosophy</span>
        <div class="h-px w-16 bg-soma-gold mx-auto mt-3"></div>
      </div>
      <h2 class="fade-in-up text-4xl md:text-5xl lg:text-6xl font-serif font-bold mb-8 text-charcoal">
        Where Personalized Medicine<br class="hidden md:block" /> Meets Modern Wellness
      </h2>
      <p class="fade-in-up max-w-3xl mx-auto text-lg md:text-xl text-secondary-text leading-relaxed">
        Welcome to SomaRenew Medical, a sanctuary dedicated to helping you
        achieve your transformation goals safely and effectively. Our expert
        medical team combines FDA-approved medications, cutting-edge technology,
        and personalized physician guidance to help you build a foundation for
        lifelong health and vitality.
      </p>
    </div>
  </section>

  <!-- Premium Feature Grid - Sanctuary Cards -->
  <section class="py-24 md:py-32 relative" style="background-color: #F5F3ED;">
    <div class="container mx-auto px-6">
      <!-- Section Header -->
      <div class="text-center mb-16">
        <span class="fade-in-up text-soma-gold uppercase tracking-[0.25em] text-sm font-semibold">Our Approach</span>
        <div class="fade-in-up h-px w-16 bg-soma-gold mx-auto mt-3 mb-6"></div>
        <h2 class="fade-in-up text-4xl md:text-5xl lg:text-6xl font-serif font-bold text-charcoal">
          Your Transformation is Our Priority
        </h2>
      </div>

      <div class="grid md:grid-cols-2 lg:grid-cols-4 gap-6 lg:gap-8">
        <!-- Card 1: FDA-Approved Solutions -->
        <div
          class="sanctuary-feature-card fade-in-up group relative bg-white rounded-3xl p-8 border border-[var(--soma-gold)]/20 transition-all duration-500 hover:-translate-y-1 hover:shadow-warm-lg"
        >
          <!-- Icon Container -->
          <div class="relative mb-8">
            <div class="w-16 h-16 rounded-2xl bg-gradient-to-br from-soma-gold/20 to-soma-gold/5 flex items-center justify-center transition-all duration-500 group-hover:scale-110">
              <svg class="h-8 w-8 text-soma-gold" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M13 10V3L4 14h7v7l9-11h-7z"/>
              </svg>
            </div>
          </div>

          <h3 class="text-xl font-serif font-bold mb-4 text-charcoal">
            FDA-Approved Solutions
          </h3>
          <p class="text-secondary-text leading-relaxed text-sm">
            We use only safe, regulated treatments backed by clinical science.
          </p>

          <!-- Bottom Link -->
          <a
            href="/services"
            class="inline-flex items-center gap-2 mt-6 text-soma-gold font-semibold text-sm group-hover:gap-3 transition-all duration-300"
          >
            Learn More
            <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 8l4 4m0 0l-4 4m4-4H3"/>
            </svg>
          </a>
        </div>

        <!-- Card 2: Personalized for Your Body -->
        <div
          class="sanctuary-feature-card fade-in-up group relative bg-white rounded-3xl p-8 border border-[var(--soma-gold)]/20 transition-all duration-500 hover:-translate-y-1 hover:shadow-warm-lg"
        >
          <!-- Icon Container -->
          <div class="relative mb-8">
            <div class="w-16 h-16 rounded-2xl bg-gradient-to-br from-sage-green/20 to-sage-green/5 flex items-center justify-center transition-all duration-500 group-hover:scale-110">
              <svg class="h-8 w-8 text-sage-green" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M9 12l2 2 4-4m5.618-4.016A11.955 11.955 0 0112 2.944a11.955 11.955 0 01-8.618 3.04A12.02 12.02 0 003 9c0 5.591 3.824 10.29 9 11.622 5.176-1.332 9-6.03 9-11.622 0-1.042-.133-2.052-.382-3.016z"/>
              </svg>
            </div>
          </div>

          <h3 class="text-xl font-serif font-bold mb-4 text-charcoal">
            Personalized for Your Body
          </h3>
          <p class="text-secondary-text leading-relaxed text-sm">
            No cookie-cutter plans—just the right path for your unique goals and health profile.
          </p>

          <!-- Bottom Link -->
          <a
            href="/services"
            class="inline-flex items-center gap-2 mt-6 text-sage-green font-semibold text-sm group-hover:gap-3 transition-all duration-300"
          >
            Learn More
            <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 8l4 4m0 0l-4 4m4-4H3"/>
            </svg>
          </a>
        </div>

        <!-- Card 3: High-Tech, High-Touch Care -->
        <div
          class="sanctuary-feature-card fade-in-up group relative bg-white rounded-3xl p-8 border border-[var(--soma-gold)]/20 transition-all duration-500 hover:-translate-y-1 hover:shadow-warm-lg"
        >
          <!-- Icon Container -->
          <div class="relative mb-8">
            <div class="w-16 h-16 rounded-2xl bg-gradient-to-br from-dusty-blue/20 to-dusty-blue/5 flex items-center justify-center transition-all duration-500 group-hover:scale-110">
              <svg class="h-8 w-8 text-dusty-blue" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M19.428 15.428a2 2 0 00-1.022-.547l-2.387-.477a6 6 0 00-3.86.517l-.318.158a6 6 0 01-3.86.517L6.05 15.21a2 2 0 00-1.806.547M8 4h8l-1 1v5.172a2 2 0 00.586 1.414l5 5c1.26 1.26.367 3.414-1.415 3.414H4.828c-1.782 0-2.674-2.154-1.414-3.414l5-5A2 2 0 009 10.172V5L8 4z"/>
              </svg>
            </div>
          </div>

          <h3 class="text-xl font-serif font-bold mb-4 text-charcoal">
            High-Tech, High-Touch Care
          </h3>
          <p class="text-secondary-text leading-relaxed text-sm">
            We combine modern diagnostics with compassionate, one-on-one attention.
          </p>

          <!-- Bottom Link -->
          <a
            href="/services"
            class="inline-flex items-center gap-2 mt-6 text-dusty-blue font-semibold text-sm group-hover:gap-3 transition-all duration-300"
          >
            Learn More
            <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 8l4 4m0 0l-4 4m4-4H3"/>
            </svg>
          </a>
        </div>

        <!-- Card 4: Real, Sustainable Results -->
        <div
          class="sanctuary-feature-card fade-in-up group relative bg-white rounded-3xl p-8 border border-[var(--soma-gold)]/20 transition-all duration-500 hover:-translate-y-1 hover:shadow-warm-lg"
        >
          <!-- Icon Container -->
          <div class="relative mb-8">
            <div class="w-16 h-16 rounded-2xl bg-gradient-to-br from-soma-gold/20 to-soma-gold/5 flex items-center justify-center transition-all duration-500 group-hover:scale-110">
              <svg class="h-8 w-8 text-soma-gold" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M9 12l2 2 4-4M7.835 4.697a3.42 3.42 0 001.946-.806 3.42 3.42 0 014.438 0 3.42 3.42 0 001.946.806 3.42 3.42 0 013.138 3.138 3.42 3.42 0 00.806 1.946 3.42 3.42 0 010 4.438 3.42 3.42 0 00-.806 1.946 3.42 3.42 0 01-3.138 3.138 3.42 3.42 0 00-1.946.806 3.42 3.42 0 01-4.438 0 3.42 3.42 0 00-1.946-.806 3.42 3.42 0 01-3.138-3.138 3.42 3.42 0 00-.806-1.946 3.42 3.42 0 010-4.438 3.42 3.42 0 00.806-1.946 3.42 3.42 0 013.138-3.138z"/>
              </svg>
            </div>
          </div>

          <h3 class="text-xl font-serif font-bold mb-4 text-charcoal">
            Real, Sustainable Results
          </h3>
          <p class="text-secondary-text leading-relaxed text-sm">
            We're not just about losing weight. We're about helping you live better—long-term.
          </p>

          <!-- Bottom Link -->
          <a
            href="/consultation"
            class="inline-flex items-center gap-2 mt-6 text-soma-gold font-semibold text-sm group-hover:gap-3 transition-all duration-300"
          >
            Get Started
            <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 8l4 4m0 0l-4 4m4-4H3"/>
            </svg>
          </a>
        </div>
      </div>
    </div>
  </section>

  <!-- FAQ Section -->
  <section
    class="py-24 md:py-32 relative overflow-hidden"
    style="background: linear-gradient(135deg, #FDFDFD 0%, #F8F6F0 100%);"
  >
    <!-- Decorative Elements -->
    <div class="absolute top-0 left-0 w-64 h-64 bg-[var(--soma-gold)]/5 rounded-full blur-3xl -translate-y-1/2 -translate-x-1/2"></div>
    <div class="absolute bottom-0 right-0 w-96 h-96 bg-[var(--sage-green)]/5 rounded-full blur-3xl translate-y-1/2 translate-x-1/2"></div>

    <div class="container mx-auto px-6 relative z-10">
      <!-- Section Header -->
      <div class="text-center mb-16">
        <span class="fade-in-up text-soma-gold uppercase tracking-[0.25em] text-sm font-semibold">Have Questions?</span>
        <div class="fade-in-up h-px w-16 bg-soma-gold mx-auto mt-3 mb-6"></div>
        <h2 class="fade-in-up text-4xl md:text-5xl lg:text-6xl font-serif font-bold text-charcoal">
          Frequently Asked Questions
        </h2>
      </div>

      <!-- FAQ Accordion -->
      <div class="max-w-3xl mx-auto space-y-4">
        <!-- FAQ Item 1 -->
        <div class="fade-in-up bg-white rounded-3xl overflow-hidden border border-[var(--soma-gold)]/20 shadow-warm">
          <details class="group">
            <summary class="flex items-center justify-between gap-4 p-6 cursor-pointer list-none font-serif font-semibold text-charcoal text-lg hover:text-soma-gold transition-colors">
              <span>Are your treatments safe?</span>
              <svg class="w-5 h-5 text-soma-gold flex-shrink-0 transition-transform duration-300 group-open:rotate-180" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 9l-7 7-7-7"/>
              </svg>
            </summary>
            <div class="px-6 pb-6 text-secondary-text leading-relaxed">
              Yes. We only use <strong class="text-charcoal">FDA-approved medications</strong> and <strong class="text-charcoal">medical-grade equipment</strong>, all overseen by licensed healthcare professionals.
            </div>
          </details>
        </div>

        <!-- FAQ Item 2 -->
        <div class="fade-in-up bg-white rounded-3xl overflow-hidden border border-[var(--soma-gold)]/20 shadow-warm">
          <details class="group">
            <summary class="flex items-center justify-between gap-4 p-6 cursor-pointer list-none font-serif font-semibold text-charcoal text-lg hover:text-soma-gold transition-colors">
              <span>Do I need a referral or prior diagnosis?</span>
              <svg class="w-5 h-5 text-soma-gold flex-shrink-0 transition-transform duration-300 group-open:rotate-180" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 9l-7 7-7-7"/>
              </svg>
            </summary>
            <div class="px-6 pb-6 text-secondary-text leading-relaxed">
              No referral is needed. We will perform a <strong class="text-charcoal">thorough health assessment</strong> to design a plan just for you.
            </div>
          </details>
        </div>

        <!-- FAQ Item 3 -->
        <div class="fade-in-up bg-white rounded-3xl overflow-hidden border border-[var(--soma-gold)]/20 shadow-warm">
          <details class="group">
            <summary class="flex items-center justify-between gap-4 p-6 cursor-pointer list-none font-serif font-semibold text-charcoal text-lg hover:text-soma-gold transition-colors">
              <span>How soon will I see results?</span>
              <svg class="w-5 h-5 text-soma-gold flex-shrink-0 transition-transform duration-300 group-open:rotate-180" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 9l-7 7-7-7"/>
              </svg>
            </summary>
            <div class="px-6 pb-6 text-secondary-text leading-relaxed">
              While every journey is unique, most clients begin to see <strong class="text-charcoal">measurable changes in the first few weeks</strong> with consistent support.
            </div>
          </details>
        </div>
      </div>
    </div>
  </section>

  <!-- Premium CTA Section - Patterned Logo Background -->
  <section class="cta-section relative py-32 md:py-40 overflow-hidden">
    <!-- Background -->
    <div class="absolute inset-0 bg-gradient-to-br from-charcoal via-[#2A363E] to-[#1E2A32]"></div>
    
    <!-- Decorative Elements -->
    <div class="absolute inset-0 overflow-hidden pointer-events-none">
      <!-- Top Gold Line -->
      <div class="absolute top-0 left-0 w-full h-px bg-gradient-to-r from-transparent via-soma-gold/40 to-transparent"></div>
      <!-- Bottom Gold Line -->
      <div class="absolute bottom-0 left-0 w-full h-px bg-gradient-to-r from-transparent via-soma-gold/40 to-transparent"></div>
      
      <!-- Repeating Logo Pattern Background -->
      <div class="cta-logo-pattern absolute inset-0 overflow-hidden" aria-hidden="true">
        <div class="logo-pattern-inner absolute -inset-[50%] w-[200%] h-[200%]" style="
          background-image: url('/logo.png');
          background-size: 280px auto;
          background-repeat: repeat;
          opacity: 0.025;
          filter: brightness(0) invert(1);
          transform: rotate(-12deg);
        "></div>
      </div>
      
      <!-- Floating Orb -->
      <div class="absolute w-[500px] h-[500px] rounded-full blur-[150px] opacity-20 -top-48 -right-48"
           style="background: radial-gradient(circle, var(--soma-gold) 0%, transparent 70%);"></div>
    </div>

    <!-- Content -->
    <div class="relative z-10 container mx-auto px-6 text-center">
      <div class="cta-content max-w-3xl mx-auto">
        <!-- Overline -->
        <span class="cta-animate inline-block text-soma-gold uppercase tracking-[0.3em] text-sm font-semibold mb-6 opacity-0">
          Begin Today
        </span>
        
        <!-- Headline -->
        <h2 class="cta-animate text-3xl sm:text-4xl md:text-5xl lg:text-6xl font-serif font-bold text-white mb-8 leading-tight opacity-0">
          Ready to Begin Your
          <span class="block text-soma-gold">Transformation?</span>
        </h2>
        
        <!-- Body -->
        <p class="cta-animate text-lg sm:text-xl text-white/60 max-w-xl mx-auto leading-relaxed mb-12 opacity-0">
          Schedule your complimentary consultation today and discover your
          personalized path to lasting results with our expert medical team.
        </p>
        
        <!-- CTA Button -->
        <a
          href="/consultation"
          class="cta-animate inline-flex items-center gap-4 bg-soma-gold hover:bg-[#D4C89A] text-charcoal rounded-full px-12 py-6 text-lg font-semibold transition-all duration-300 hover:scale-105 shadow-gold-glow opacity-0 group"
        >
          <span>Book My Free Consultation</span>
          <svg class="w-6 h-6 transition-transform duration-300 group-hover:translate-x-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 8l4 4m0 0l-4 4m4-4H3"/>
          </svg>
        </a>
        
        <!-- Trust Indicators -->
        <div class="cta-animate mt-16 flex flex-wrap justify-center gap-8 text-white/40 text-sm opacity-0">
          <div class="flex items-center gap-2">
            <svg class="w-5 h-5 text-soma-gold" fill="currentColor" viewBox="0 0 20 20">
              <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd"/>
            </svg>
            <span>Physician-Guided</span>
          </div>
          <div class="flex items-center gap-2">
            <svg class="w-5 h-5 text-soma-gold" fill="currentColor" viewBox="0 0 20 20">
              <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd"/>
            </svg>
            <span>Personalized Care</span>
          </div>
          <div class="flex items-center gap-2">
            <svg class="w-5 h-5 text-soma-gold" fill="currentColor" viewBox="0 0 20 20">
              <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd"/>
            </svg>
            <span>Lasting Results</span>
          </div>
        </div>
      </div>
    </div>
  </section>
</MainLayout>

<style>
  /* ===== Hero Background Image - Luxurious Widescreen Scaling ===== */
  .hero-image-container {
    overflow: hidden;
  }

  .hero-bg-image {
    /* Default: Cover with center focus */
    object-fit: cover;
    object-position: center center;
    /* Subtle Ken Burns zoom effect for premium feel */
    animation: heroKenBurns 25s ease-in-out infinite alternate;
    transform-origin: center center;
  }

  /* Mobile: Position to show the person (main subject) */
  @media (max-width: 639px) {
    .hero-bg-image {
      /* Focus on the person - center-left of image, upper body visible */
      object-position: 35% 45%;
      /* Subtle animation */
