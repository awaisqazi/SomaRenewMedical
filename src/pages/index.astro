---
import MainLayout from "../layouts/MainLayout.astro";
---

<MainLayout title="Home">
  <!-- Hero Section with Warm Charcoal Overlay -->
  <section
    class="relative bg-cover bg-center min-h-[70vh] flex items-center"
    style='background-image: linear-gradient(rgba(54, 69, 79, 0.5), rgba(54, 69, 79, 0.7)), url("https://storage.googleapis.com/stitch-assets/images/people/wlf-3.jpg")'
  >
    <div class="container mx-auto px-6 text-center text-white">
      <p
        class="text-[var(--soma-gold)] uppercase tracking-[0.3em] text-sm mb-4 font-medium"
      >
        Welcome to SomaRenew Medical
      </p>
      <h1 class="text-4xl md:text-6xl lg:text-7xl font-bold mb-6 leading-tight">
        The Physician-Led Path<br class="hidden md:block" /> to Transformation
      </h1>
      <p
        class="text-lg md:text-xl max-w-3xl mx-auto mb-10 text-gray-200 leading-relaxed"
      >
        Combining GLP-1 Medications, Peptide Therapy, and Advanced Body
        Contouring for personalized, lasting results in a serene, luxury
        environment.
      </p>
      <div class="flex flex-col sm:flex-row gap-4 justify-center">
        <a
          class="btn-primary py-4 px-10 rounded-full text-lg font-semibold transition-all duration-300 hover:scale-105 shadow-lg"
          href="/consultation">Schedule My Consultation</a
        >
        <a
          class="py-4 px-10 rounded-full text-lg font-semibold border-2 border-white/30 text-white backdrop-blur-sm transition-all duration-300 hover:bg-white/10 hover:border-white/50"
          href="/services">View Our Services</a
        >
      </div>
    </div>
    <!-- Scroll Indicator -->
    <div class="absolute bottom-8 left-1/2 -translate-x-1/2 animate-bounce">
      <svg
        class="w-6 h-6 text-white/60"
        fill="none"
        stroke="currentColor"
        viewBox="0 0 24 24"
      >
        <path
          stroke-linecap="round"
          stroke-linejoin="round"
          stroke-width="2"
          d="M19 14l-7 7m0 0l-7-7m7 7V3"></path>
      </svg>
    </div>
  </section>

  <!-- Welcome Section with Decorative Elements -->
  <section
    class="py-24 relative overflow-hidden"
    style="background: linear-gradient(135deg, #FDFDFD 0%, #F8F6F0 100%);"
  >
    <!-- Decorative Background Elements -->
    <div
      class="absolute top-0 right-0 w-96 h-96 bg-[var(--soma-gold)]/5 rounded-full blur-3xl -translate-y-1/2 translate-x-1/2"
    >
    </div>
    <div
      class="absolute bottom-0 left-0 w-64 h-64 bg-[var(--sage-green)]/5 rounded-full blur-3xl translate-y-1/2 -translate-x-1/2"
    >
    </div>

    <div class="container mx-auto px-6 text-center relative z-10">
      <div class="inline-block mb-6">
        <span
          class="text-[var(--soma-gold)] uppercase tracking-[0.25em] text-sm font-semibold"
          >Our Philosophy</span
        >
        <div class="h-px w-16 bg-[var(--soma-gold)] mx-auto mt-3"></div>
      </div>
      <h2 class="text-4xl md:text-5xl font-bold mb-8">
        Where Personalized Medicine<br class="hidden md:block" /> Meets Modern Wellness
      </h2>
      <p class="max-w-3xl mx-auto text-lg text-gray-600 leading-relaxed">
        Welcome to SomaRenew Medical, a sanctuary dedicated to helping you
        achieve your transformation goals safely and effectively. Our expert
        medical team combines FDA-approved medications, cutting-edge technology,
        and personalized physician guidance to help you build a foundation for
        lifelong health and vitality.
      </p>
    </div>
  </section>

  <!-- Premium Feature Grid -->
  <section class="py-24 relative" style="background-color: #F5F3ED;">
    <div class="container mx-auto px-6">
      <!-- Section Header -->
      <div class="text-center mb-16">
        <span
          class="text-[var(--soma-gold)] uppercase tracking-[0.25em] text-sm font-semibold"
          >Our Approach</span
        >
        <div class="h-px w-16 bg-[var(--soma-gold)] mx-auto mt-3 mb-6"></div>
        <h2 class="text-4xl md:text-5xl font-bold">
          Your Transformation is Our Priority
        </h2>
      </div>

      <div class="grid md:grid-cols-2 lg:grid-cols-4 gap-6 lg:gap-8">
        <!-- Card 1: Medical Weight Loss -->
        <div
          class="group relative bg-white rounded-3xl p-8 transition-all duration-500 hover:-translate-y-2"
          style="box-shadow: 0 10px 40px rgba(54, 69, 79, 0.08);"
        >
          <!-- Top Accent Line -->
          <div
            class="absolute top-0 left-8 right-8 h-1 bg-gradient-to-r from-transparent via-[var(--soma-gold)] to-transparent rounded-full opacity-0 group-hover:opacity-100 transition-opacity duration-500"
          >
          </div>

          <!-- Icon Container -->
          <div class="relative mb-8">
            <div
              class="w-20 h-20 rounded-2xl bg-gradient-to-br from-[var(--soma-gold)]/20 to-[var(--soma-gold)]/5 flex items-center justify-center group-hover:scale-110 transition-transform duration-500"
            >
              <svg
                class="h-10 w-10 text-[var(--soma-gold)]"
                fill="none"
                stroke="currentColor"
                viewBox="0 0 24 24"
              >
                <path
                  stroke-linecap="round"
                  stroke-linejoin="round"
                  stroke-width="1.5"
                  d="M13 10V3L4 14h7v7l9-11h-7z"></path>
              </svg>
            </div>
            <!-- Decorative Ring -->
            <div
              class="absolute -top-2 -left-2 w-24 h-24 border border-[var(--soma-gold)]/20 rounded-2xl rotate-6 group-hover:rotate-12 transition-transform duration-500"
            >
            </div>
          </div>

          <h3 class="text-xl font-bold mb-4 text-[var(--charcoal)]">
            FDA-Approved Solutions
          </h3>
          <p class="text-gray-600 leading-relaxed text-sm">
            We use only safe, regulated treatments backed by clinical science.
          </p>

          <!-- Bottom Link -->
          <a
            href="/services"
            class="inline-flex items-center gap-2 mt-6 text-[var(--soma-gold)] font-semibold text-sm group-hover:gap-3 transition-all duration-300"
          >
            Learn More
            <svg
              class="w-4 h-4"
              fill="none"
              stroke="currentColor"
              viewBox="0 0 24 24"
              ><path
                stroke-linecap="round"
                stroke-linejoin="round"
                stroke-width="2"
                d="M17 8l4 4m0 0l-4 4m4-4H3"></path></svg
            >
          </a>
        </div>

        <!-- Card 2: Body Contouring -->
        <div
          class="group relative bg-white rounded-3xl p-8 transition-all duration-500 hover:-translate-y-2"
          style="box-shadow: 0 10px 40px rgba(54, 69, 79, 0.08);"
        >
          <!-- Top Accent Line -->
          <div
            class="absolute top-0 left-8 right-8 h-1 bg-gradient-to-r from-transparent via-[var(--sage-green)] to-transparent rounded-full opacity-0 group-hover:opacity-100 transition-opacity duration-500"
          >
          </div>

          <!-- Icon Container -->
          <div class="relative mb-8">
            <div
              class="w-20 h-20 rounded-2xl bg-gradient-to-br from-[var(--sage-green)]/20 to-[var(--sage-green)]/5 flex items-center justify-center group-hover:scale-110 transition-transform duration-500"
            >
              <svg
                class="h-10 w-10 text-[var(--sage-green)]"
                fill="none"
                stroke="currentColor"
                viewBox="0 0 24 24"
              >
                <path
                  stroke-linecap="round"
                  stroke-linejoin="round"
                  stroke-width="1.5"
                  d="M9 12l2 2 4-4m5.618-4.016A11.955 11.955 0 0112 2.944a11.955 11.955 0 01-8.618 3.04A12.02 12.02 0 003 9c0 5.591 3.824 10.29 9 11.622 5.176-1.332 9-6.03 9-11.622 0-1.042-.133-2.052-.382-3.016z"
                ></path>
              </svg>
            </div>
            <!-- Decorative Ring -->
            <div
              class="absolute -top-2 -left-2 w-24 h-24 border border-[var(--sage-green)]/20 rounded-2xl rotate-6 group-hover:rotate-12 transition-transform duration-500"
            >
            </div>
          </div>

          <h3 class="text-xl font-bold mb-4 text-[var(--charcoal)]">
            Personalized for Your Body
          </h3>
          <p class="text-gray-600 leading-relaxed text-sm">
            No cookie-cutter plans—just the right path for your unique goals and
            health profile.
          </p>

          <!-- Bottom Link -->
          <a
            href="/services"
            class="inline-flex items-center gap-2 mt-6 text-[var(--sage-green)] font-semibold text-sm group-hover:gap-3 transition-all duration-300"
          >
            Learn More
            <svg
              class="w-4 h-4"
              fill="none"
              stroke="currentColor"
              viewBox="0 0 24 24"
              ><path
                stroke-linecap="round"
                stroke-linejoin="round"
                stroke-width="2"
                d="M17 8l4 4m0 0l-4 4m4-4H3"></path></svg
            >
          </a>
        </div>

        <!-- Card 3: IV & Hormone Therapy -->
        <div
          class="group relative bg-white rounded-3xl p-8 transition-all duration-500 hover:-translate-y-2"
          style="box-shadow: 0 10px 40px rgba(54, 69, 79, 0.08);"
        >
          <!-- Top Accent Line -->
          <div
            class="absolute top-0 left-8 right-8 h-1 bg-gradient-to-r from-transparent via-[var(--dusty-blue)] to-transparent rounded-full opacity-0 group-hover:opacity-100 transition-opacity duration-500"
          >
          </div>

          <!-- Icon Container -->
          <div class="relative mb-8">
            <div
              class="w-20 h-20 rounded-2xl bg-gradient-to-br from-[var(--dusty-blue)]/20 to-[var(--dusty-blue)]/5 flex items-center justify-center group-hover:scale-110 transition-transform duration-500"
            >
              <svg
                class="h-10 w-10 text-[var(--dusty-blue)]"
                fill="none"
                stroke="currentColor"
                viewBox="0 0 24 24"
              >
                <path
                  stroke-linecap="round"
                  stroke-linejoin="round"
                  stroke-width="1.5"
                  d="M19.428 15.428a2 2 0 00-1.022-.547l-2.387-.477a6 6 0 00-3.86.517l-.318.158a6 6 0 01-3.86.517L6.05 15.21a2 2 0 00-1.806.547M8 4h8l-1 1v5.172a2 2 0 00.586 1.414l5 5c1.26 1.26.367 3.414-1.415 3.414H4.828c-1.782 0-2.674-2.154-1.414-3.414l5-5A2 2 0 009 10.172V5L8 4z"
                ></path>
              </svg>
            </div>
            <!-- Decorative Ring -->
            <div
              class="absolute -top-2 -left-2 w-24 h-24 border border-[var(--dusty-blue)]/20 rounded-2xl rotate-6 group-hover:rotate-12 transition-transform duration-500"
            >
            </div>
          </div>

          <h3 class="text-xl font-bold mb-4 text-[var(--charcoal)]">
            High-Tech, High-Touch Care
          </h3>
          <p class="text-gray-600 leading-relaxed text-sm">
            We combine modern diagnostics with compassionate, one-on-one
            attention.
          </p>

          <!-- Bottom Link -->
          <a
            href="/services"
            class="inline-flex items-center gap-2 mt-6 text-[var(--dusty-blue)] font-semibold text-sm group-hover:gap-3 transition-all duration-300"
          >
            Learn More
            <svg
              class="w-4 h-4"
              fill="none"
              stroke="currentColor"
              viewBox="0 0 24 24"
              ><path
                stroke-linecap="round"
                stroke-linejoin="round"
                stroke-width="2"
                d="M17 8l4 4m0 0l-4 4m4-4H3"></path></svg
            >
          </a>
        </div>

        <!-- Card 4: Sustainable Results -->
        <div
          class="group relative bg-white rounded-3xl p-8 transition-all duration-500 hover:-translate-y-2"
          style="box-shadow: 0 10px 40px rgba(54, 69, 79, 0.08);"
        >
          <!-- Top Accent Line -->
          <div
            class="absolute top-0 left-8 right-8 h-1 bg-gradient-to-r from-transparent via-[var(--soma-gold)] to-transparent rounded-full opacity-0 group-hover:opacity-100 transition-opacity duration-500"
          >
          </div>

          <!-- Icon Container -->
          <div class="relative mb-8">
            <div
              class="w-20 h-20 rounded-2xl bg-gradient-to-br from-[var(--soma-gold)]/20 to-[var(--soma-gold)]/5 flex items-center justify-center group-hover:scale-110 transition-transform duration-500"
            >
              <svg
                class="h-10 w-10 text-[var(--soma-gold)]"
                fill="none"
                stroke="currentColor"
                viewBox="0 0 24 24"
              >
                <path
                  stroke-linecap="round"
                  stroke-linejoin="round"
                  stroke-width="1.5"
                  d="M9 12l2 2 4-4M7.835 4.697a3.42 3.42 0 001.946-.806 3.42 3.42 0 014.438 0 3.42 3.42 0 001.946.806 3.42 3.42 0 013.138 3.138 3.42 3.42 0 00.806 1.946 3.42 3.42 0 010 4.438 3.42 3.42 0 00-.806 1.946 3.42 3.42 0 01-3.138 3.138 3.42 3.42 0 00-1.946.806 3.42 3.42 0 01-4.438 0 3.42 3.42 0 00-1.946-.806 3.42 3.42 0 01-3.138-3.138 3.42 3.42 0 00-.806-1.946 3.42 3.42 0 010-4.438 3.42 3.42 0 00.806-1.946 3.42 3.42 0 013.138-3.138z"
                ></path>
              </svg>
            </div>
            <!-- Decorative Ring -->
            <div
              class="absolute -top-2 -left-2 w-24 h-24 border border-[var(--soma-gold)]/20 rounded-2xl rotate-6 group-hover:rotate-12 transition-transform duration-500"
            >
            </div>
          </div>

          <h3 class="text-xl font-bold mb-4 text-[var(--charcoal)]">
            Real, Sustainable Results
          </h3>
          <p class="text-gray-600 leading-relaxed text-sm">
            We're not just about losing weight. We're about helping you live
            better—long-term.
          </p>

          <!-- Bottom Link -->
          <a
            href="/consultation"
            class="inline-flex items-center gap-2 mt-6 text-[var(--soma-gold)] font-semibold text-sm group-hover:gap-3 transition-all duration-300"
          >
            Get Started
            <svg
              class="w-4 h-4"
              fill="none"
              stroke="currentColor"
              viewBox="0 0 24 24"
              ><path
                stroke-linecap="round"
                stroke-linejoin="round"
                stroke-width="2"
                d="M17 8l4 4m0 0l-4 4m4-4H3"></path></svg
            >
          </a>
        </div>
      </div>
    </div>
  </section>

  <!-- FAQ Section -->
  <section
    class="py-24 relative overflow-hidden"
    style="background: linear-gradient(135deg, #FDFDFD 0%, #F8F6F0 100%);"
  >
    <!-- Decorative Elements -->
    <div
      class="absolute top-0 left-0 w-64 h-64 bg-[var(--soma-gold)]/5 rounded-full blur-3xl -translate-y-1/2 -translate-x-1/2"
    >
    </div>
    <div
      class="absolute bottom-0 right-0 w-96 h-96 bg-[var(--sage-green)]/5 rounded-full blur-3xl translate-y-1/2 translate-x-1/2"
    >
    </div>

    <div class="container mx-auto px-6 relative z-10">
      <!-- Section Header -->
      <div class="text-center mb-16">
        <span
          class="text-[var(--soma-gold)] uppercase tracking-[0.25em] text-sm font-semibold"
          >Have Questions?</span
        >
        <div class="h-px w-16 bg-[var(--soma-gold)] mx-auto mt-3 mb-6"></div>
        <h2 class="text-4xl md:text-5xl font-bold text-[var(--charcoal)]">
          Frequently Asked Questions
        </h2>
      </div>

      <!-- FAQ Accordion -->
      <div class="max-w-3xl mx-auto space-y-4">
        <!-- FAQ Item 1 -->
        <div
          class="bg-white rounded-2xl overflow-hidden"
          style="box-shadow: 0 10px 40px rgba(54, 69, 79, 0.08);"
        >
          <details class="group">
            <summary
              class="flex items-center justify-between gap-4 p-6 cursor-pointer list-none font-semibold text-[var(--charcoal)] text-lg hover:text-[var(--soma-gold)] transition-colors"
            >
              <span>Are your treatments safe?</span>
              <svg
                class="w-5 h-5 text-[var(--soma-gold)] flex-shrink-0 transition-transform duration-300 group-open:rotate-180"
                fill="none"
                stroke="currentColor"
                viewBox="0 0 24 24"
              >
                <path
                  stroke-linecap="round"
                  stroke-linejoin="round"
                  stroke-width="2"
                  d="M19 9l-7 7-7-7"></path>
              </svg>
            </summary>
            <div class="px-6 pb-6 text-gray-600 leading-relaxed">
              Yes. We only use <strong class="text-[var(--charcoal)]"
                >FDA-approved medications</strong
              > and <strong class="text-[var(--charcoal)]"
                >medical-grade equipment</strong
              >, all overseen by licensed healthcare professionals.
            </div>
          </details>
        </div>

        <!-- FAQ Item 2 -->
        <div
          class="bg-white rounded-2xl overflow-hidden"
          style="box-shadow: 0 10px 40px rgba(54, 69, 79, 0.08);"
        >
          <details class="group">
            <summary
              class="flex items-center justify-between gap-4 p-6 cursor-pointer list-none font-semibold text-[var(--charcoal)] text-lg hover:text-[var(--soma-gold)] transition-colors"
            >
              <span>Do I need a referral or prior diagnosis?</span>
              <svg
                class="w-5 h-5 text-[var(--soma-gold)] flex-shrink-0 transition-transform duration-300 group-open:rotate-180"
                fill="none"
                stroke="currentColor"
                viewBox="0 0 24 24"
              >
                <path
                  stroke-linecap="round"
                  stroke-linejoin="round"
                  stroke-width="2"
                  d="M19 9l-7 7-7-7"></path>
              </svg>
            </summary>
            <div class="px-6 pb-6 text-gray-600 leading-relaxed">
              No referral is needed. We will perform a <strong
                class="text-[var(--charcoal)]"
                >thorough health assessment</strong
              > to design a plan just for you.
            </div>
          </details>
        </div>

        <!-- FAQ Item 3 -->
        <div
          class="bg-white rounded-2xl overflow-hidden"
          style="box-shadow: 0 10px 40px rgba(54, 69, 79, 0.08);"
        >
          <details class="group">
            <summary
              class="flex items-center justify-between gap-4 p-6 cursor-pointer list-none font-semibold text-[var(--charcoal)] text-lg hover:text-[var(--soma-gold)] transition-colors"
            >
              <span>How soon will I see results?</span>
              <svg
                class="w-5 h-5 text-[var(--soma-gold)] flex-shrink-0 transition-transform duration-300 group-open:rotate-180"
                fill="none"
                stroke="currentColor"
                viewBox="0 0 24 24"
              >
                <path
                  stroke-linecap="round"
                  stroke-linejoin="round"
                  stroke-width="2"
                  d="M19 9l-7 7-7-7"></path>
              </svg>
            </summary>
            <div class="px-6 pb-6 text-gray-600 leading-relaxed">
              While every journey is unique, most clients begin to see <strong
                class="text-[var(--charcoal)]"
                >measurable changes in the first few weeks</strong
              > with consistent support.
            </div>
          </details>
        </div>
      </div>
    </div>
  </section>

  <!-- Premium CTA Section -->
  <section
    class="relative py-24 overflow-hidden"
    style="background: linear-gradient(135deg, #36454F 0%, #2A363E 100%);"
  >
    <!-- Decorative Elements -->
    <div
      class="absolute top-0 left-0 w-full h-px bg-gradient-to-r from-transparent via-[var(--soma-gold)]/30 to-transparent"
    >
    </div>
    <div
      class="absolute bottom-0 left-0 w-full h-px bg-gradient-to-r from-transparent via-[var(--soma-gold)]/30 to-transparent"
    >
    </div>
    <div
      class="absolute top-1/2 right-0 w-96 h-96 bg-[var(--soma-gold)]/5 rounded-full blur-3xl -translate-y-1/2 translate-x-1/2"
    >
    </div>

    <div class="container mx-auto px-6 text-center relative z-10">
      <span
        class="inline-block text-[var(--soma-gold)] uppercase tracking-[0.25em] text-sm font-semibold mb-4"
        >Begin Today</span
      >
      <h2 class="text-3xl md:text-5xl font-bold text-white mb-6">
        Ready to Begin Your Transformation?
      </h2>
      <p class="text-lg text-gray-400 max-w-2xl mx-auto mb-10 leading-relaxed">
        Schedule your complimentary consultation today and discover your
        personalized path to lasting results with our expert medical team.
      </p>
      <a
        class="inline-flex items-center gap-3 rounded-full bg-[var(--soma-gold)] px-10 py-4 text-lg font-semibold text-[var(--charcoal)] transition-all duration-300 hover:bg-[#D4C89A] hover:scale-105 shadow-lg hover:shadow-xl"
        href="/consultation"
      >
        Book My Free Consultation
        <svg
          class="w-5 h-5"
          fill="none"
          stroke="currentColor"
          viewBox="0 0 24 24"
          ><path
            stroke-linecap="round"
            stroke-linejoin="round"
            stroke-width="2"
            d="M17 8l4 4m0 0l-4 4m4-4H3"></path></svg
        >
      </a>
    </div>
  </section>
</MainLayout>
