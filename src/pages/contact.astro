---
import MainLayout from "../layouts/MainLayout.astro";
---

<MainLayout title="Contact Us">
  <!-- Hero Section -->
  <section
    class="relative py-16 md:py-20 overflow-hidden"
    style="background: linear-gradient(135deg, #FDFDFD 0%, #F8F6F0 100%);"
  >
    <div
      class="absolute top-0 right-0 w-64 h-64 bg-[var(--soma-gold)]/5 rounded-full blur-3xl translate-x-1/2 -translate-y-1/2"
    >
    </div>

    <div class="container mx-auto px-6 text-center relative z-10">
      <span
        class="inline-block text-[var(--soma-gold)] uppercase tracking-[0.25em] text-sm font-semibold mb-3"
        >Contact Us</span
      >
      <div class="h-px w-16 bg-[var(--soma-gold)] mx-auto mb-6"></div>
      <h1 class="text-4xl md:text-5xl font-bold text-[var(--charcoal)] mb-4">
        Get in Touch
      </h1>
      <p class="text-lg text-gray-600 max-w-xl mx-auto">
        We're here to answer any questions you may have. Reach out to us and
        we'll respond as soon as we can.
      </p>
    </div>
  </section>

  <!-- Main Content -->
  <section class="py-16 md:py-24" style="background-color: #F5F3ED;">
    <div class="container mx-auto px-6">
      <div class="grid grid-cols-1 lg:grid-cols-2 gap-12 lg:gap-20">
        <!-- Contact Form -->
        <div
          class="bg-white rounded-3xl p-8 md:p-10"
          style="box-shadow: 0 10px 40px rgba(54, 69, 79, 0.08);"
        >
          <h2 class="text-2xl font-bold text-[var(--charcoal)] mb-6">
            Send Us a Message
          </h2>

          <form action="#" class="space-y-5" method="POST">
            <div>
              <label
                class="block text-sm font-medium text-[var(--charcoal)] mb-2"
                for="name">Your Name</label
              >
              <input
                autocomplete="name"
                class="block w-full rounded-xl border border-gray-200 bg-[var(--warm-white)] py-3.5 px-4 text-[var(--charcoal)] placeholder:text-gray-400 focus:border-[var(--soma-gold)] focus:ring-2 focus:ring-[var(--soma-gold)]/20 transition-all duration-300"
                id="name"
                name="name"
                placeholder="John Smith"
                type="text"
              />
            </div>
            <div>
              <label
                class="block text-sm font-medium text-[var(--charcoal)] mb-2"
                for="email">Email Address</label
              >
              <input
                autocomplete="email"
                class="block w-full rounded-xl border border-gray-200 bg-[var(--warm-white)] py-3.5 px-4 text-[var(--charcoal)] placeholder:text-gray-400 focus:border-[var(--soma-gold)] focus:ring-2 focus:ring-[var(--soma-gold)]/20 transition-all duration-300"
                id="email"
                name="email"
                placeholder="john@example.com"
                type="email"
              />
            </div>
            <div>
              <label
                class="block text-sm font-medium text-[var(--charcoal)] mb-2"
                for="phone">Phone Number</label
              >
              <input
                autocomplete="tel"
                class="block w-full rounded-xl border border-gray-200 bg-[var(--warm-white)] py-3.5 px-4 text-[var(--charcoal)] placeholder:text-gray-400 focus:border-[var(--soma-gold)] focus:ring-2 focus:ring-[var(--soma-gold)]/20 transition-all duration-300"
                id="phone"
                name="phone"
                placeholder="(310) 555-0123"
                type="tel"
              />
            </div>
            <div>
              <label
                class="block text-sm font-medium text-[var(--charcoal)] mb-2"
                for="message">Your Message</label
              >
              <textarea
                class="block w-full rounded-xl border border-gray-200 bg-[var(--warm-white)] py-3.5 px-4 text-[var(--charcoal)] placeholder:text-gray-400 focus:border-[var(--soma-gold)] focus:ring-2 focus:ring-[var(--soma-gold)]/20 transition-all duration-300 resize-none"
                id="message"
                name="message"
                placeholder="How can we help you?"
                rows="5"></textarea>
            </div>
            <div class="pt-2">
              <button
                class="w-full rounded-full bg-[var(--soma-gold)] py-4 px-6 text-[var(--charcoal)] font-semibold transition-all duration-300 hover:bg-[#D4C89A] hover:scale-[1.02] shadow-md"
                type="submit"
              >
                Send Message
              </button>
            </div>
          </form>
        </div>

        <!-- Contact Info & Map -->
        <div class="space-y-8">
          <!-- Quick Contact Cards -->
          <div class="grid grid-cols-1 sm:grid-cols-2 gap-4">
            <div
              class="bg-white rounded-2xl p-6 text-center group transition-all duration-300 hover:-translate-y-1"
              style="box-shadow: 0 10px 40px rgba(54, 69, 79, 0.08);"
            >
              <div
                class="w-14 h-14 mx-auto mb-4 rounded-2xl bg-[var(--soma-gold)]/10 flex items-center justify-center"
              >
                <svg
                  class="w-7 h-7 text-[var(--soma-gold)]"
                  fill="none"
                  stroke="currentColor"
                  viewBox="0 0 24 24"
                >
                  <path
                    stroke-linecap="round"
                    stroke-linejoin="round"
                    stroke-width="1.5"
                    d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z"
                  ></path>
                </svg>
              </div>
              <h3 class="font-semibold text-[var(--charcoal)] mb-1">Phone</h3>
              <a
                class="text-gray-600 hover:text-[var(--soma-gold)] transition-colors"
                href="tel:+15551234567">(555) 123-4567</a
              >
            </div>

            <div
              class="bg-white rounded-2xl p-6 text-center group transition-all duration-300 hover:-translate-y-1"
              style="box-shadow: 0 10px 40px rgba(54, 69, 79, 0.08);"
            >
              <div
                class="w-14 h-14 mx-auto mb-4 rounded-2xl bg-[var(--sage-green)]/10 flex items-center justify-center"
              >
                <svg
                  class="w-7 h-7 text-[var(--sage-green)]"
                  fill="none"
                  stroke="currentColor"
                  viewBox="0 0 24 24"
                >
                  <path
                    stroke-linecap="round"
                    stroke-linejoin="round"
                    stroke-width="1.5"
                    d="M3 8l7.89 5.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z"
                  ></path>
                </svg>
              </div>
              <h3 class="font-semibold text-[var(--charcoal)] mb-1">Email</h3>
              <a
                class="text-gray-600 hover:text-[var(--soma-gold)] transition-colors"
                href="mailto:contact@somarenew.com">contact@somarenew.com</a
              >
            </div>
          </div>

          <!-- Clinic Info Card -->
          <div
            class="bg-white rounded-3xl p-8"
            style="box-shadow: 0 10px 40px rgba(54, 69, 79, 0.08);"
          >
            <h3 class="text-xl font-bold text-[var(--charcoal)] mb-6">
              Clinic Information
            </h3>

            <div class="space-y-6">
              <div class="flex items-start gap-4">
                <div
                  class="w-10 h-10 rounded-xl bg-[var(--dusty-blue)]/10 flex items-center justify-center flex-shrink-0"
                >
                  <svg
                    class="w-5 h-5 text-[var(--dusty-blue)]"
                    fill="none"
                    stroke="currentColor"
                    viewBox="0 0 24 24"
                  >
                    <path
                      stroke-linecap="round"
                      stroke-linejoin="round"
                      stroke-width="1.5"
                      d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z"
                    ></path>
                    <path
                      stroke-linecap="round"
                      stroke-linejoin="round"
                      stroke-width="1.5"
                      d="M15 11a3 3 0 11-6 0 3 3 0 016 0z"></path>
                  </svg>
                </div>
                <div>
                  <p class="font-medium text-[var(--charcoal)]">Address</p>
                  <p class="text-gray-600">
                    1867 Bay Scott Cir<br />Naperville, IL 60540
                  </p>
                </div>
              </div>

              <div class="flex items-start gap-4">
                <div
                  class="w-10 h-10 rounded-xl bg-[var(--soma-gold)]/10 flex items-center justify-center flex-shrink-0"
                >
                  <svg
                    class="w-5 h-5 text-[var(--soma-gold)]"
                    fill="none"
                    stroke="currentColor"
                    viewBox="0 0 24 24"
                  >
                    <path
                      stroke-linecap="round"
                      stroke-linejoin="round"
                      stroke-width="1.5"
                      d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z"></path>
                  </svg>
                </div>
                <div>
                  <p class="font-medium text-[var(--charcoal)]">
                    Hours of Operation
                  </p>
                  <ul class="text-gray-600 mt-1 space-y-0.5">
                    <li>Monday - Friday: 9 AM - 6 PM</li>
                    <li>Saturday: 10 AM - 4 PM</li>
                    <li>Sunday: Closed</li>
                  </ul>
                </div>
              </div>
            </div>
          </div>

          <!-- Map -->
          <div
            class="rounded-3xl overflow-hidden shadow-xl"
            style="box-shadow: 0 10px 40px rgba(54, 69, 79, 0.08);"
          >
            <iframe
              allowfullscreen=""
              class="w-full h-[280px]"
              loading="lazy"
              src="https://maps.google.com/maps?q=1867+Bay+Scott+Cir,+Naperville,+IL+60540&t=&z=15&ie=UTF8&iwloc=&output=embed"
              style="border: 0"></iframe>
          </div>
        </div>
      </div>
    </div>
  </section>
</MainLayout>
