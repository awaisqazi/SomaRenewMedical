---
import MainLayout from '../layouts/MainLayout.astro';
---
<MainLayout title="Contact Us">
  <div class="py-20 lg:py-24">
    <div class="container mx-auto grid grid-cols-1 lg:grid-cols-2 gap-16 lg:gap-24 px-8">
      <div class="space-y-12">
        <div>
          <h2 class="text-4xl lg:text-5xl font-bold text-[var(--primary-text)]">
            Get in Touch
          </h2>
          <p class="mt-4 text-lg text-gray-600">
            We're here to answer any questions you may have. Reach out to us and we'll respond as soon as we can.
          </p>
        </div>
        <form action="#" class="space-y-6" method="POST">
          <div>
            <label class="sr-only" for="name">Your Name</label>
            <input autocomplete="name" class="form-input block w-full rounded-md border-gray-300 bg-white/50 py-3 px-4 text-[var(--primary-text)] placeholder:text-gray-400 focus:border-[var(--accent-gold)] focus:ring-[var(--accent-gold)]" id="name" name="name" placeholder="Your Name" type="text"/>
          </div>
          <div>
            <label class="sr-only" for="email">Email Address</label>
            <input autocomplete="email" class="form-input block w-full rounded-md border-gray-300 bg-white/50 py-3 px-4 text-[var(--primary-text)] placeholder:text-gray-400 focus:border-[var(--accent-gold)] focus:ring-[var(--accent-gold)]" id="email" name="email" placeholder="Email Address" type="email"/>
          </div>
          <div>
            <label class="sr-only" for="phone">Phone Number</label>
            <input autocomplete="tel" class="form-input block w-full rounded-md border-gray-300 bg-white/50 py-3 px-4 text-[var(--primary-text)] placeholder:text-gray-400 focus:border-[var(--accent-gold)] focus:ring-[var(--accent-gold)]" id="phone" name="phone" placeholder="Phone Number" type="tel"/>
          </div>
          <div>
            <label class="sr-only" for="message">Message</label>
            <textarea class="form-textarea block w-full rounded-md border-gray-300 bg-white/50 py-3 px-4 text-[var(--primary-text)] placeholder:text-gray-400 focus:border-[var(--accent-gold)] focus:ring-[var(--accent-gold)]" id="message" name="message" placeholder="Your Message" rows="4"></textarea>
          </div>
          <div>
            <button class="btn-primary w-full flex justify-center py-3 px-4 rounded-md text-base font-semibold shadow-sm" type="submit">
              Send Message
            </button>
          </div>
        </form>
      </div>
      <div class="space-y-12">
        <div class="space-y-6">
          <h3 class="text-2xl font-semibold text-[var(--primary-text)]">
            Clinic Information
          </h3>
          <div class="space-y-4 text-lg text-gray-600">
            <p>
              123 Wellness Avenue, Suite 200<br/>Serenity Springs, CA
              91234
            </p>
            <p>(555) 123-4567</p>
            <div>
              <p class="font-semibold text-[var(--primary-text)]">
                Hours of Operation:
              </p>
              <ul class="mt-1">
                <li>Monday - Friday: 9 AM - 6 PM</li>
                <li>Saturday: 10 AM - 4 PM</li>
                <li>Sunday: Closed</li>
              </ul>
            </div>
          </div>
        </div>
        <div>
          <div class="aspect-w-16 aspect-h-9 w-full overflow-hidden rounded-lg shadow-lg">
            <iframe allowfullscreen="" class="h-full w-full" height="450" loading="lazy" src="https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d3305.717657513476!2d-118.2575296847814!3d34.05116798060683!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x80c2c63425425555%3A0x5a5b5a5b5a5b5a5b!2sLos%20Angeles%2C%20CA%2C%20USA!5e0!3m2!1sen!2s!4v1620677526707!5m2!1sen!2s" style="border: 0" width="600"></iframe>
          </div>
        </div>
      </div>
    </div>
  </div>
</MainLayout>