        </div>
      </section>

      <!-- Peptide Therapy Section -->
      <section class="mb-24">
        <div class="fade-in-up mb-12 text-center opacity-0">
          <span class="inline-block text-[var(--dusty-blue)] uppercase tracking-[0.25em] text-xs font-semibold mb-3">
            Advanced Therapies
          </span>
          <h2 class="text-3xl sm:text-4xl md:text-5xl font-serif font-bold text-[var(--charcoal)]">Peptide Therapy</h2>
