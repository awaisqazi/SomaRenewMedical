              <h3 class="text-2xl font-serif font-semibold text-[var(--charcoal)]">IV Drips</h3>
            </div>

            <!-- Spa Menu Items -->
            <div class="space-y-5">
              {ivDrips.map((drip, index) => (
                <div class="spa-menu-item group" style={`animation-delay: ${index * 0.1}s`}>
                  <div class="flex items-baseline justify-between gap-2">
                    <span class="font-semibold text-[var(--charcoal)] group-hover:text-[var(--soma-gold)] transition-colors">
                      {drip.name}
                    </span>
                    <span class="flex-1 border-b-2 border-dotted border-[var(--soma-gold)]/30 mx-2 mb-1"></span>
                    <span class="font-serif text-xl font-light text-[var(--charcoal)]">
                      <span class="text-[var(--soma-gold)] text-sm">$</span>{drip.price}
                    </span>
                  </div>
                  <p class="text-sm text-[var(--secondary-text)] italic mt-1">{drip.description}</p>
                </div>
              ))}
            </div>
          </div>

          <!-- Booster Injections - Spa Menu -->
          <div class="fade-in-up opacity-0 rounded-3xl bg-white/80 backdrop-blur-sm p-8 md:p-10 border border-[var(--soma-gold)]/20 shadow-[0_4px_24px_rgba(54,69,79,0.08)]">
            <div class="flex items-center gap-3 mb-8">
              <div class="flex h-12 w-12 items-center justify-center rounded-2xl bg-[var(--sage-green)]/10">
                <svg class="h-6 w-6 text-[var(--sage-green)]" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m5.618-4.016A11.955 11.955 0 0112 2.944a11.955 11.955 0 01-8.618 3.04A12.02 12.02 0 003 9c0 5.591 3.824 10.29 9 11.622 5.176-1.332 9-6.03 9-11.622 0-1.042-.133-2.052-.382-3.016z"/>
