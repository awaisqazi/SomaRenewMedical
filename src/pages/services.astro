            <!-- Spa Menu Items -->
            <div class="space-y-5">
              {injections.map((injection, index) => (
                <div class="spa-menu-item group" style={`animation-delay: ${index * 0.1}s`}>
                  <div class="flex items-baseline justify-between gap-2">
                    <span class="font-semibold text-[var(--charcoal)] group-hover:text-[var(--soma-gold)] transition-colors">
                      {injection.name}
                    </span>
                    <span class="flex-1 border-b-2 border-dotted border-[var(--soma-gold)]/30 mx-2 mb-1"></span>
                    <span class="font-serif text-xl font-light text-[var(--charcoal)]">
                      <span class="text-[var(--soma-gold)] text-sm">$</span>{injection.price}
                    </span>
                  </div>
                  <p class="text-sm text-[var(--secondary-text)] italic mt-1">{injection.description}</p>
                </div>
              ))}
