            <!-- Editorial Price -->
            <div class="mt-6 flex items-baseline gap-1">
              <span class="text-[var(--soma-gold)] font-serif text-xl font-light">$</span>
              <span class="text-4xl md:text-5xl font-serif font-light tracking-tight text-[var(--charcoal)]">399</span>
              <span class="text-[var(--secondary-text)] text-base ml-2">/month</span>
            </div>

            <ul class="mt-6 space-y-3">
              <li class="flex items-start gap-3">
                <svg class="mt-0.5 h-5 w-5 flex-shrink-0 text-[var(--sage-green)]" fill="currentColor" viewBox="0 0 20 20">
                  <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd"/>
                </svg>
                <span class="text-[var(--secondary-text)]">Dual-action GLP-1 + GIP agonist</span>
              </li>
              <li class="flex items-start gap-3">
                <svg class="mt-0.5 h-5 w-5 flex-shrink-0 text-[var(--sage-green)]" fill="currentColor" viewBox="0 0 20 20">
                  <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd"/>
                </svg>
                <span class="text-[var(--secondary-text)]">Enhanced metabolic results</span>
              </li>
            </ul>

            <!-- Complimentary Offer -->
            <div class="mt-6 flex items-center gap-3 rounded-xl border-2 border-dashed border-[var(--soma-gold)]/40 bg-[var(--soma-gold)]/5 p-3">
              <svg class="h-5 w-5 flex-shrink-0 text-[var(--soma-gold)]" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v13m0-13V6a2 2 0 112 2h-2zm0 0V5.5A2.5 2.5 0 109.5 8H12zm-7 4h14M5 12a2 2 0 110-4h14a2 2 0 110 4M5 12v7a2 2 0 002 2h10a2 2 0 002-2v-7"/>
              </svg>
              <p class="text-sm font-medium text-[var(--charcoal)]">
                <span class="text-[var(--soma-gold)] font-semibold">FREE</span> Monthly IV Drip included
              </p>
            </div>

            <div class="mt-8">
              <a href="/consultation" class="mobile-sticky-cta block w-full rounded-full bg-[var(--soma-gold)] py-3.5 text-center font-semibold text-[var(--charcoal)] transition-all duration-300 hover:bg-[#D4C89A] hover:shadow-[0_4px_20px_rgba(192,178,131,0.4)]">
                Get Started
              </a>
            </div>
          </div>
        </div>
      </section>

      <!-- IV & Injection Therapy Section - Spa Menu Layout -->
      <section class="mb-24">
        <div class="fade-in-up mb-12 text-center opacity-0">
          <span class="inline-block text-[var(--sage-green)] uppercase tracking-[0.25em] text-xs font-semibold mb-3">
            Wellness Infusions
          </span>
          <h2 class="text-3xl sm:text-4xl md:text-5xl font-serif font-bold text-[var(--charcoal)]">IV & Injection Therapy</h2>
          <p class="mt-4 text-[var(--secondary-text)] max-w-xl mx-auto">
            Replenish, re-energize, and renew from within
          </p>
        </div>

        <div class="grid gap-8 lg:grid-cols-2">
          <!-- IV Drips - Spa Menu -->
          <div class="fade-in-up opacity-0 rounded-3xl bg-white/80 backdrop-blur-sm p-8 md:p-10 border border-[var(--soma-gold)]/20 shadow-[0_4px_24px_rgba(54,69,79,0.08)]">
            <div class="flex items-center gap-3 mb-8">
              <div class="flex h-12 w-12 items-center justify-center rounded-2xl bg-[var(--dusty-blue)]/10">
                <svg class="h-6 w-6 text-[var(--dusty-blue)]" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19.428 15.428a2 2 0 00-1.022-.547l-2.387-.477a6 6 0 00-3.86.517l-.318.158a6 6 0 01-3.86.517L6.05 15.21a2 2 0 00-1.806.547M8 4h8l-1 1v5.172a2 2 0 00.586 1.414l5 5c1.26 1.26.367 3.414-1.415 3.414H4.828c-1.782 0-2.674-2.154-1.414-3.414l5-5A2 2 0 009 10.172V5L8 4z"/>
                </svg>
