---
import MainLayout from "../layouts/MainLayout.astro";

const ivDrips = [
  { name: "Myers Wellness", description: "Essential vitamins & hydration", price: 159 },
  { name: "Immunity Boost", description: "High-dose Vitamin C & zinc", price: 169 },
  { name: "Weight-Loss Drip", description: "Metabolism & energy support", price: 179 },
  { name: "NAD+ IV", description: "Cellular regeneration & anti-aging", price: 199 },
  { name: "Glutathione Drip", description: "Master antioxidant detox", price: 129 },
  { name: "Migraine Cocktail", description: "Fast-acting headache relief", price: 109 },
];

const injections = [
  { name: "B-12 Shot", description: "Energy & metabolism boost", price: 49 },
  { name: "Lipo B/C", description: "Fat-burning amino acids", price: 59 },
  { name: "Glutathione", description: "Skin brightening & detox", price: 49 },
  { name: "CoQ10", description: "Heart health & energy", price: 69 },
  { name: "NAD+ Injection", description: "Quick cellular rejuvenation", price: 79 },
