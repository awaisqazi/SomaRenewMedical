---
import MainLayout from "../layouts/MainLayout.astro";
---

<MainLayout title="Schedule Your Consultation">
  <main class="flex flex-1 justify-center py-16 sm:py-24 lg:py-32">
    <div class="flex flex-col max-w-4xl flex-1 px-6">
      <div class="text-center space-y-4 mb-12">
        <h2
          class="text-5xl font-bold text-[var(--primary-text)] tracking-tight"
        >
          Schedule Your Consultation
        </h2>
        <p class="text-lg text-gray-600 max-w-2xl mx-auto">
          We're excited to help you start your journey towards a healthier you.
          Please use our convenient scheduling tool below to book your initial
          consultation.
        </p>
      </div>

      <div class="w-full bg-white rounded-lg p-8 md:p-12">
        <div class="w-full flex justify-center">
          <iframe
            src="https://partner.pabau.com/online-bookings/soma-7ij46?category=195676&location=24088&staff=115036&fallback=true"
            width="100%"
            height="550"
            style="max-width: 600px; border: none; border-radius: 8px;"
            title="Book Your Consultation"></iframe>
        </div>
      </div>

      <div class="mt-12 text-center space-y-8">
        <div
          class="bg-green-50/50 border border-green-200/80 rounded-lg p-6 max-w-2xl mx-auto hidden"
          id="confirmation-message"
        >
          <h3 class="text-xl font-semibold text-[var(--accent-green)]">
            Consultation Scheduled!
          </h3>
          <p class="mt-2 text-gray-600">
            Your appointment is confirmed for <span class="font-bold"
              >[Date]</span
            > at <span class="font-bold">[Time]</span>. Please arrive 15 minutes
            early and bring a form of ID.
          </p>
        </div>
        <div class="text-center">
          <h3 class="text-2xl font-semibold text-[var(--primary-text)] mb-3">
            Need Assistance?
          </h3>
          <p class="text-gray-600">
            If you have any questions or need help with scheduling, please don't
            hesitate to contact us.
          </p>
          <div class="mt-4 flex justify-center items-center gap-6">
            <a
              class="font-medium text-[var(--accent-blue)] hover:text-[var(--accent-gold)] transition-colors"
              href="tel:+13105550123">(310) 555-0123</a
            >
            <span class="text-gray-300">|</span>
            <a
              class="font-medium text-[var(--accent-blue)] hover:text-[var(--accent-gold)] transition-colors"
              href="mailto:contact@somarenew.com">contact@somarenew.com</a
            >
          </div>
        </div>
      </div>
    </div>
  </main>
</MainLayout>
