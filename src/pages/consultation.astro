---
import MainLayout from "../layouts/MainLayout.astro";
---

<MainLayout title="Schedule Your Consultation">
  <!-- Hero Section -->
  <section
    class="relative py-16 md:py-20 overflow-hidden"
    style="background: linear-gradient(135deg, #FDFDFD 0%, #F8F6F0 100%);"
  >
    <div
      class="absolute top-0 right-0 w-64 h-64 bg-[var(--soma-gold)]/5 rounded-full blur-3xl translate-x-1/2 -translate-y-1/2"
    >
    </div>
    <div
      class="absolute bottom-0 left-0 w-48 h-48 bg-[var(--sage-green)]/5 rounded-full blur-3xl -translate-x-1/2 translate-y-1/2"
    >
    </div>

    <div class="container mx-auto px-6 text-center relative z-10">
      <span
        class="inline-block text-[var(--soma-gold)] uppercase tracking-[0.25em] text-sm font-semibold mb-3"
        >Book Now</span
      >
      <div class="h-px w-16 bg-[var(--soma-gold)] mx-auto mb-6"></div>
      <h1 class="text-4xl md:text-5xl font-bold text-[var(--charcoal)] mb-4">
        Schedule Your Consultation
      </h1>
      <p class="text-lg text-gray-600 max-w-2xl mx-auto">
        We're excited to help you start your journey towards a healthier you.
        Please use our convenient scheduling tool below to book your initial
        consultation.
      </p>
    </div>
  </section>

  <!-- Booking Section -->
  <section class="py-12 md:py-16" style="background-color: #F5F3ED;">
    <div class="container mx-auto px-6">
      <div class="max-w-4xl mx-auto">
        <!-- Booking Widget Card -->
        <div
          class="bg-white rounded-3xl p-8 md:p-12 mb-10"
          style="box-shadow: 0 10px 40px rgba(54, 69, 79, 0.08);"
        >
          <div class="w-full flex justify-center">
            <iframe
              src="https://partner.pabau.com/online-bookings/soma-7ij46?category=195676&location=24088&staff=115036&fallback=true"
              width="100%"
              height="550"
              style="max-width: 600px; border: none; border-radius: 12px;"
              title="Book Your Consultation"></iframe>
          </div>
        </div>

        <!-- What to Expect -->
        <div class="grid md:grid-cols-3 gap-6 mb-10">
          <div
            class="bg-white rounded-2xl p-6 text-center transition-all duration-300 hover:-translate-y-1"
            style="box-shadow: 0 10px 40px rgba(54, 69, 79, 0.08);"
          >
            <div
              class="w-14 h-14 mx-auto mb-4 rounded-2xl bg-[var(--sage-green)]/10 flex items-center justify-center"
            >
              <svg
                class="w-7 h-7 text-[var(--sage-green)]"
                fill="none"
                stroke="currentColor"
                viewBox="0 0 24 24"
              >
                <path
                  stroke-linecap="round"
                  stroke-linejoin="round"
                  stroke-width="1.5"
                  d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z"></path>
              </svg>
            </div>
            <h3 class="font-bold text-[var(--charcoal)] mb-2">45-60 Minutes</h3>
            <p class="text-sm text-gray-600">
              Comprehensive initial consultation with our physician
            </p>
          </div>

          <div
            class="bg-white rounded-2xl p-6 text-center transition-all duration-300 hover:-translate-y-1"
            style="box-shadow: 0 10px 40px rgba(54, 69, 79, 0.08);"
          >
            <div
              class="w-14 h-14 mx-auto mb-4 rounded-2xl bg-[var(--soma-gold)]/10 flex items-center justify-center"
            >
              <svg
                class="w-7 h-7 text-[var(--soma-gold)]"
                fill="none"
                stroke="currentColor"
                viewBox="0 0 24 24"
              >
                <path
                  stroke-linecap="round"
                  stroke-linejoin="round"
                  stroke-width="1.5"
                  d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z"></path>
              </svg>
            </div>
            <h3 class="font-bold text-[var(--charcoal)] mb-2">
              Personalized Plan
            </h3>
            <p class="text-sm text-gray-600">
              Tailored treatment recommendations for your goals
            </p>
          </div>

          <div
            class="bg-white rounded-2xl p-6 text-center transition-all duration-300 hover:-translate-y-1"
            style="box-shadow: 0 10px 40px rgba(54, 69, 79, 0.08);"
          >
            <div
              class="w-14 h-14 mx-auto mb-4 rounded-2xl bg-[var(--dusty-blue)]/10 flex items-center justify-center"
            >
              <svg
                class="w-7 h-7 text-[var(--dusty-blue)]"
                fill="none"
                stroke="currentColor"
                viewBox="0 0 24 24"
              >
                <path
                  stroke-linecap="round"
                  stroke-linejoin="round"
                  stroke-width="1.5"
                  d="M12 8c-1.657 0-3 .895-3 2s1.343 2 3 2 3 .895 3 2-1.343 2-3 2m0-8c1.11 0 2.08.402 2.599 1M12 8V7m0 1v8m0 0v1m0-1c-1.11 0-2.08-.402-2.599-1M21 12a9 9 0 11-18 0 9 9 0 0118 0z"
                ></path>
              </svg>
            </div>
            <h3 class="font-bold text-[var(--charcoal)] mb-2">
              No Hidden Fees
            </h3>
            <p class="text-sm text-gray-600">
              Transparent pricing with all options discussed
            </p>
          </div>
        </div>

        <!-- Need Assistance Card -->
        <div
          class="bg-white rounded-3xl p-8 text-center"
          style="box-shadow: 0 10px 40px rgba(54, 69, 79, 0.08);"
        >
          <h3 class="text-2xl font-bold text-[var(--charcoal)] mb-3">
            Need Assistance?
          </h3>
          <p class="text-gray-600 mb-6">
            If you have any questions or need help with scheduling, please don't
            hesitate to contact us.
          </p>
          <div
            class="flex flex-col sm:flex-row justify-center items-center gap-4 sm:gap-8"
          >
            <a
              class="inline-flex items-center gap-2 font-medium text-[var(--charcoal)] hover:text-[var(--soma-gold)] transition-colors"
              href="tel:+13105550123"
            >
              <svg
                class="w-5 h-5 text-[var(--soma-gold)]"
                fill="none"
                stroke="currentColor"
                viewBox="0 0 24 24"
              >
                <path
                  stroke-linecap="round"
                  stroke-linejoin="round"
                  stroke-width="1.5"
                  d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z"
                ></path>
              </svg>
              (310) 555-0123
            </a>
            <span class="hidden sm:block text-gray-300">|</span>
            <a
              class="inline-flex items-center gap-2 font-medium text-[var(--charcoal)] hover:text-[var(--soma-gold)] transition-colors"
              href="mailto:contact@somarenew.com"
            >
              <svg
                class="w-5 h-5 text-[var(--soma-gold)]"
                fill="none"
                stroke="currentColor"
                viewBox="0 0 24 24"
              >
                <path
                  stroke-linecap="round"
                  stroke-linejoin="round"
                  stroke-width="1.5"
                  d="M3 8l7.89 5.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z"
                ></path>
              </svg>
              contact@somarenew.com
            </a>
          </div>
        </div>
      </div>
    </div>
  </section>
</MainLayout>
