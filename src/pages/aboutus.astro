      <div class="text-center mb-16">
        <span
          class="text-[var(--soma-gold)] uppercase tracking-[0.25em] text-sm font-semibold"
          >Expert Care</span
        >
        <div class="h-px w-16 bg-[var(--soma-gold)] mx-auto mt-3 mb-6"></div>
        <h2 class="text-4xl md:text-5xl font-bold text-[var(--charcoal)]">
          Meet The Medical Team
        </h2>
      </div>

      <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-10">
        <!-- Team Member 1 -->
