  <!-- Sanctuary Section -->
  <section
    class="py-24 md:py-32 relative overflow-hidden"
    style="background: linear-gradient(135deg, #FDFDFD 0%, #F8F6F0 100%);"
  >
    <div class="container mx-auto px-6">
      <div class="text-center max-w-3xl mx-auto mb-16">
        <span
          class="text-[var(--soma-gold)] uppercase tracking-[0.25em] text-sm font-semibold"
          >Our Space</span
        >
        <div class="h-px w-16 bg-[var(--soma-gold)] mx-auto mt-3 mb-6"></div>
        <h2
          class="text-4xl md:text-5xl font-bold text-[var(--charcoal)] leading-tight mb-6"
        >
          A Sanctuary for Your Renewal
        </h2>
        <p class="text-xl text-gray-600 leading-relaxed">
          We have meticulously designed our clinic to be a calm, welcoming, and
          state-of-the-art sanctuary. From the moment you walk in, you will feel
          the difference.
        </p>
      </div>

      <div
        class="grid grid-cols-2 md:grid-cols-4 grid-rows-2 gap-4 h-[500px] md:h-[600px]"
      >
        <div
          class="col-span-2 row-span-2 rounded-3xl overflow-hidden shadow-xl group"
        >
