<style>
  /* Hero Animations */
  .hero-animate {
    transform: translateY(30px);
    transition: opacity 0.8s ease-out, transform 0.8s ease-out;
  }
  
  .hero-animate.in-view {
    opacity: 1 !important;
    transform: translateY(0);
  }
  
  .hero-delay-1 { transition-delay: 0.15s; }
  .hero-delay-2 { transition-delay: 0.3s; }
  .hero-delay-3 { transition-delay: 0.5s; }
  .hero-delay-4 { transition-delay: 0.65s; }

  /* Specialist Section Animations */
  .specialist-animate {
    transform: translateY(40px);
    transition: opacity 0.9s ease-out, transform 0.9s ease-out;
  }
  
  .specialist-animate.in-view {
    opacity: 1 !important;
    transform: translateY(0);
  }
  
  .specialist-delay-1 { transition-delay: 0.15s; }
  .specialist-delay-2 { transition-delay: 0.3s; }
  .specialist-delay-3 { transition-delay: 0.5s; }

  /* CTA Animations */
  .cta-animate {
    transform: translateY(30px);
    transition: opacity 0.8s ease-out, transform 0.8s ease-out;
  }
  
  .cta-animate.in-view {
    opacity: 1 !important;
    transform: translateY(0);
  }
  
  .cta-delay-1 { transition-delay: 0.15s; }
  .cta-delay-2 { transition-delay: 0.3s; }
  .cta-delay-3 { transition-delay: 0.45s; }

  /* Parallax Orbs */
  .parallax-orb {
    transition: transform 0.4s ease-out;
    will-change: transform;
  }

  /* Glassmorphism Card Hover Enhancement */
  .glass-card {
    backdrop-filter: blur(12px);
    -webkit-backdrop-filter: blur(12px);
  }

  .glass-card:hover {
    backdrop-filter: blur(16px);
    -webkit-backdrop-filter: blur(16px);
  }

  /* Editorial Card Enhancements */
  .editorial-card {
    backdrop-filter: blur(16px);
    -webkit-backdrop-filter: blur(16px);
  }
</style>

<script>
  document.addEventListener('DOMContentLoaded', () => {
    // ===== Hero Section Animations =====
    const heroAnimateElements = document.querySelectorAll('.hero-animate');
    
    // Trigger hero animations after a short delay (on page load)
    setTimeout(() => {
      heroAnimateElements.forEach(el => {
        el.classList.add('in-view');
      });
    }, 100);

    // ===== Specialist Section Animations - Scroll Triggered =====
    const specialistElements = document.querySelectorAll('.specialist-animate');
    
    if (specialistElements.length > 0) {
      const specialistObserver = new IntersectionObserver((entries) => {
        entries.forEach(entry => {
          if (entry.isIntersecting) {
            // Get all specialist elements and trigger them in sequence
            specialistElements.forEach(el => {
              el.classList.add('in-view');
            });
            specialistObserver.disconnect(); // Only trigger once
          }
        });
      }, {
        threshold: 0.15,
        rootMargin: '0px 0px -10% 0px'
      });

      // Observe the specialist section
      const specialistSection = document.querySelector('.specialist-section');
      if (specialistSection) {
        specialistObserver.observe(specialistSection);
      }
    }

    // ===== CTA Section Animations - Scroll Triggered =====
    const ctaElements = document.querySelectorAll('.cta-animate');
    
    if (ctaElements.length > 0) {
      const ctaObserver = new IntersectionObserver((entries) => {
        entries.forEach(entry => {
          if (entry.isIntersecting) {
            ctaElements.forEach(el => {
              el.classList.add('in-view');
            });
            ctaObserver.disconnect(); // Only trigger once
          }
        });
      }, {
        threshold: 0.2,
        rootMargin: '0px 0px -10% 0px'
      });

      // Observe the CTA section
      const ctaSection = document.querySelector('.cta-section');
      if (ctaSection) {
        ctaObserver.observe(ctaSection);
      }
    }

    // ===== Parallax Effect for Background Orbs =====
    const parallaxOrbs = document.querySelectorAll('.parallax-orb');
    
    if (parallaxOrbs.length > 0) {
      let ticking = false;
      
      const updateParallax = () => {
        const scrollY = window.scrollY;
        
        parallaxOrbs.forEach((orb, index) => {
          const speed = (index % 3 + 1) * 0.03; // Vary speed per orb
          const direction = index % 2 === 0 ? 1 : -1; // Alternate direction
          const yOffset = scrollY * speed * direction;
          const xOffset = scrollY * speed * 0.5 * direction;
          
          (orb as HTMLElement).style.transform = `translate(${xOffset}px, ${yOffset}px)`;
        });
      };
      
      window.addEventListener('scroll', () => {
        if (!ticking) {
          window.requestAnimationFrame(() => {
            updateParallax();
            ticking = false;
          });
          ticking = true;
        }
      }, { passive: true });
      
      // Initial position
      updateParallax();
    }
  });
</script>
